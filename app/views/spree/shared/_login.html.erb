<div class="col-lg-11 mx-auto">
  <h3 class="spree-mb-large spree-mt-large spree-header login-header"><%= Spree.t(:log_in_to_continue) %></h3>
  <%= form_for Spree.user_class.new, as: :spree_user, url: spree_login_path, data: { turbo: false } do |f| %>
    <div id="password-credentials" class="mb-4">
      <div class="form-group mb-4">
        <p class="form-group checkout-content-inner-field">
          <%= f.email_field :email, class: 'form-control', placeholder: Spree.t(:email), value: params.dig(:spree_user, :email) %>
        </p>
      </div>
      <div class="form-group mb-4">
        <p class="form-group checkout-content-inner-field">
          <%= f.password_field :password, class: 'form-control', placeholder: Spree.t(:password) %>
        </p>
      </div>
    </div>
<% if Spree::Frontend::Config[:remember_me_enabled] || spree.respond_to?(:recover_password_path) %>
  <div class="d-flex justify-content-between align-items-center mt-4 mt-sm-5 mt-lg-4 spree-mb-medium">
    <% if Spree::Frontend::Config[:remember_me_enabled] %>
      <div class="spree-checkbox-container">
        <div class="spree-checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, '' %>
        </div>
        <%= f.label :remember_me, Spree.t(:remember_me), class: 'spree-checkbox-label' %>
      </div>
    <% end %>

    <% if spree.respond_to?(:recover_password_path) %>
      <div class="forgot-password mt-0">
        <%= link_to Spree.t(:forgot_password), spree.recover_password_path, class: 'text-center' %>
      </div>
    <% end %>
  </div>
<% end %>
    <%= f.submit Spree.t(:login), class: 'btn btn-primary btn-block spree-btn login-btn' %>
  <% end %>
</div>
